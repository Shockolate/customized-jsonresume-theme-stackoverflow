{{#if resume.speaking.length}}
<section class="section">
  <header>
    <h2 class='section-title'>Public Speaking <span class="item-count">({{resume.speaking.length}})</span></h2>
  </header>

  <section id="speaking">
    {{#each resume.speaking}}
    <section class="speaking-item">
			{{#if event}}


        {{#if @first}}
        <input id="speaking-item-{{@index}}" type="checkbox" class="toggle-item" checked="checked" />
        {{else}}
        <input id="speaking-item-{{@index}}" type="checkbox" class="toggle-item" />
        {{/if}}
        <label for="speaking-item-{{@index}}"></label>


			<header class="clear">
				{{#if topic}}
				<div class="topic">{{topic}}</div>
				{{/if}}
				<div class="event">{{event}}</div>
				<div class="date">
          {{#if date}}
				  <span class="date">{{MY date}}</span>
          {{/if}}
				</div>
			</header>
			{{/if}}

			{{#if location}}
			{{#isObject location}}
			<span class="location">
				<span class="fas fa-map-marker-alt"></span>
				{{#if city}}
				<span class="city">{{city}},</span>
				{{/if}}
				{{#if countryCode}}
				<span class="countryCode">({{countryCode}})</span>
				{{/if}}
				{{#if region}}
				<span class="region">{{region}}</span>
				{{/if}}
			</span>
			{{else}}
			<span class="location">
				<span class="fas fa-map-marker-alt"></span>
				<span>{{location}}</span>
			</span>
			{{/isObject}}
	    {{/if}}

			{{#if url}}
    	<span class="url">
    		<a target="_blank" href="{{url}}">{{url}}</a>
    	</span> {{/if}} {{#if keywords.length}}
    	<ul class="keywords">
      	{{#each keywords}}
      	<li>{{.}}</li>
      	{{/each}}
    	</ul>
    	{{/if}}
    	<div class="item" id="speaking-item">
        {{#if location.length}}
        <ul class="location">
          {{#each location}}
            <li>{{paragraphSplit .}}</li>
          {{/each}}
        </ul>
        {{/if}}
    	</div>
    </section>
    {{/each}}
  </section>
</section>
{{/if}}
